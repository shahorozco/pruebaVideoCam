<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.8dp"
                android:color="@android:color/white" />
            <size android:width="72dp" android:height="72dp"/>
        </shape>
    </item>

    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/foregroundColor"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>